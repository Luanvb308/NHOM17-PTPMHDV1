<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - VNB</title>
    <link rel="stylesheet" href="/Product.css">
    <link rel="stylesheet" href="/style.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div class="header">
        <div class="logo">
            <img alt="Company Logo" src="https://cdn.shopvnb.com/themes/images/logo.svg" />
            <span>VNB</span>
        </div>
        <div class="hotline">
            <i class="fas fa-phone-alt"></i>
            <span>HOTLINE: 0977508430 | 0338000308</span>
        </div>
        <div class="store-system">
            <i class="fas fa-map-marker-alt"></i>
            <span>HỆ THỐNG CỬA HÀNG</span>
        </div>
        <div class="search-bar">
            <input placeholder="Tìm sản phẩm..." type="text"/>
            <button><i class="fas fa-search"></i></button>
        </div>
        <div class="icons">
            <span class="taikhoan">TÀI KHOẢN
                <ul class="con">
                    <li><a href="/signup">Đăng nhập</a></li>
                </ul>
            </span>
            <a class="cart-icon" href="#">
                <i class="fas fa-shopping-cart"></i>
                <span class="badge">0</span>
                <span>GIỎ HÀNG</span>
            </a>
        </div>
    </div>
    
    <ul>
        <li><a href="#home">Trang chủ</a></li>
        <li><a href="/product">Sản phẩm</a></li>
        <li><a href="#news">Sale off</a></li>
        <li><a href="#news">Tin Tức</a></li>
        <li><a href="#news">Giới thiệu</a></li>
        <li><a href="#contact">Liên hệ</a></li>
    </ul>

    <div class="container">
        <div class="sidebar">
            <h3>CHỌN MỨC GIÁ</h3>
            <label><input type="checkbox" class="price-filter" value="under-500000"/> Giá dưới 500.000đ</label>
            <label><input type="checkbox" class="price-filter" value="500000-1000000"/> 500.000đ - 1 triệu</label>
            <label><input type="checkbox" class="price-filter" value="1000000-2000000"/> 1 - 2 triệu</label>
            <label><input type="checkbox" class="price-filter" value="2000000-3000000"/> 2 - 3 triệu</label>
            <label><input type="checkbox" class="price-filter" value="above-3000000"/> Giá trên 3 triệu</label>
            <h3>THƯƠNG HIỆU</h3>
            <label><input type="checkbox" class="brand-filter" value="Yonex"/> Yonex</label>
            <label><input type="checkbox" class="brand-filter" value="Li-Ning"/> Li-Ning</label>
            <label><input type="checkbox" class="brand-filter" value=Wilson"/> Wilson</label>
            <label><input type="checkbox" class="brand-filter" value="Victor"/> Victor</label>
            <!-- Thêm các thương hiệu khác nếu cần -->
            <h3>CHI NHÁNH</h3>
            <input type="text" placeholder="Tìm chi nhánh" class="branch-search"/>
            <i class="fas fa-search search-icon"></i>
          
        <label><input type="checkbox"/> VNB PREMIUM Quận 1</label>
        <label><input type="checkbox"/> VNB PREMIUM Quận 11</label>
        <label><input type="checkbox"/> VNB Quận 4</label>
        <label><input type="checkbox"/> VNB Bình Thạnh</label>
        <label><input type="checkbox"/> VNB TP Thủ Đức - CN1</label>
        <label><input type="checkbox"/> VNB Hai Bà Trưng</label>
        <label><input type="checkbox"/> VNB Nam Từ Liêm</label>
        <label><input type="checkbox"/> VNB Bắc Từ Liêm</label>
        <label><input type="checkbox"/> VNB Cầu Giấy</label>
        <label><input type="checkbox"/> VNB Hà Đông</label>
        <label><input type="checkbox"/> VNB Hoàng Mai</label>
        <label><input type="checkbox"/> VNB Hải Châu Đà Nẵng</label>
        <label><input type="checkbox"/> VNB Thanh Khê Đà Nẵng</label>
        <label><input type="checkbox"/> VNB Long Xuyên</label>
        <h3>Chiều dài vợt</h3>
        <label><input type="checkbox"/> 665 mm</label>
        <label><input type="checkbox"/> 670 mm</label>
        <label><input type="checkbox"/> 675 mm</label>
        <h3>Chiều dài cán vợt</h3>
        <label><input type="checkbox"/> 200 mm</label>
        <label><input type="checkbox"/> 205 mm</label>
        <label><input type="checkbox"/> 210 mm</label>
        <h3>Swingweight</h3>
        <label><input type="checkbox"/> Dưới 82 kg/cm2</label>
        <label><input type="checkbox"/> 82-84 kg/cm2</label>
        <label><input type="checkbox"/> 84-86 kg/cm2</label>
        <label><input type="checkbox"/> 86-88 kg/cm2</label>
        <label><input type="checkbox"/> Trên 88 kg/cm2</label>
        <h3>Trọng Lượng</h3>
        <label><input type="checkbox"/> 2U: 90 - 94g</label>
        <label><input type="checkbox"/> 3U: 85 - 89g</label>
        <label><input type="checkbox"/> 4U: 80 - 84g</label>
        <label><input type="checkbox"/> 5U: 75 - 79g</label>
        <label><input type="checkbox"/> F: 70 - 74g</label>
        <label><input type="checkbox"/> 2F: 65 - 69g</label>
        </div>
        <div class="main-content">
            <div class="brands">
                <img alt="Voltric logo" src="https://storage.googleapis.com/a1aa/image/xeta8cL6jjU2HKq4dSKi7zBhAzFEHhK7xOscDYfbfn5Ue4BPB.jpg"/>
                <!-- Add other brand images similarly -->
            </div>
            <div class="header">
                <h2>VỢT CẦU LÔNG </h2>
                <select id="sort-select" onchange="sortProducts()"> 
                    <option value="" disabled selected>Sắp xếp</option>
                    <option value="default">Mặc định</option>
                    <option value="asc">Giá tăng dần</option>
                    <option value="desc">Giá giảm dần</option>
                </select>
            </div>
            <div class="product-list">
                <% products.forEach(product => { %>
                    <div class="product-item">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                        <h2 class="product-name"><%= product.name %></h2>
                        <p class="product-price"><%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
                    </div>
                <% }) %>
               </div>
            <div class="pagination">
                    <a href="#" class="page-link">1</a>
                    <a href="#" class="page-link">2</a>
                    <a href="#" class="page-link">3</a>
                    <a href="#" class="page-link">4</a>
                    <a href="#" class="page-link">5</a>
                    <a href="#" class="page-link">6</a>
                </div>
        </div>
    </div>
   
    <div class="footer">

        <div class="footer-content">
            <p>© Nhom 17. All rights reserved.</p>
        </div>
    </div>
    <script>
        // Giả sử bạn đã truyền dữ liệu sản phẩm từ server vào biến `products`
        let products = <%- JSON.stringify(products) %>; // Chuyển đổi danh sách sản phẩm sang JSON
    
        // Hàm sắp xếp sản phẩm
        function sortProducts(order) {
            if (order === 'asc') {
                products.sort((a, b) => a.price - b.price); // Sắp xếp theo giá tăng dần
            } else if (order === 'desc') {
                products.sort((a, b) => b.price - a.price); // Sắp xếp theo giá giảm dần
            } else {
                // Nếu là 'default', không thực hiện sắp xếp
                // Có thể thực hiện một cách sắp xếp khác nếu cần
                // Ví dụ: sắp xếp theo ID hoặc tên
                products.sort((a, b) => a.id - b.id); // Sắp xếp theo ID mặc định
            }
            renderProducts(); // Cập nhật giao diện sau khi sắp xếp
        }
    
        // Hàm hiển thị sản phẩm
        function renderProducts() {
            const productList = document.querySelector('.product-list');
            productList.innerHTML = ''; // Xóa danh sách sản phẩm hiện tại
    
            products.forEach(product => {
                const productItem = document.createElement('div');
                productItem.classList.add('product-item');
                productItem.innerHTML = `
                    <img src="${product.image}" alt="${product.name}" class="product-image">
                    <h2 class="product-name">${product.name}</h2>
                    <p class="product-price">${product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</p>
                `;
                productList.appendChild(productItem);
            });
        }
    
        // Thêm sự kiện cho dropdown sắp xếp
        document.getElementById('sort-select').addEventListener('change', function() {
            sortProducts(this.value); // Gọi hàm sắp xếp khi người dùng thay đổi lựa chọn
        });
    
        // Gọi hàm renderProducts khi trang được tải
        document.addEventListener('DOMContentLoaded', renderProducts);

    </script>

 </script>
</body>
</html>